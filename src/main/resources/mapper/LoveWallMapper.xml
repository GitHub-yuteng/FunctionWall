<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.functionwall.dao.LoveWallMapper">
	<sql id="tablename">topic_lovewall</sql>
	<sql id="insertFields">title,category,content,created_date,id_user</sql>
	<sql id="selectFields">id,title,category,content,created_date,id_user</sql>

	<insert id="save" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO
		<include refid="tablename"/>
		(
		<include refid="insertFields"/>
		)
		VALUE (#{title},#{category},#{content},#{createdDate},#{userId})
	</insert>
</mapper>